<div class="container">
	<% if user_signed_in? %>
		<%= form_for [@post, @comment] do |f| %>
			<%= f.text_field :body %>
			<%= f.submit 'コメントする' %>
		<% end %>
	<% end %>
	<div class="row">
		<div class="col-6 col-offset-2">
			<%= image_tag @post.user.profile_image.url %>
			<%= @post.user.name %>
			<%= @post.body %>
			<% if @post.post_image.present? %>
				<%= image_tag @post.post_image.url %>
			<% end %>
			<% if @post.post_video.file.present? %>
				<%= @post.post_video %>
			<% end %>

			<%= @comments.each do |comment| %>
				<%= image_tag comment.user.profile_image.url %>
				<%= comment.user.name %>
				<%= comment.body %>
				<% if comment.comment_image.present? %>
					<%= image_tag comment.comment_image.url %>
				<% end %>
				<% if comment.comment_video.present? %>
					<%= commet.comment_video %>
				<% end %>
			<% end %>
		</div>
		<div class="col-2">
			人気のユーザ
		</div>
	</div>
</div>